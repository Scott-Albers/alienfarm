extends ../shared/template
block title
  h1 aliens
block content
  .row
    .col-xs-6
    table.table.table-striped
      thread
       tr
         th Name
         th Photo
         th planet
         th actions
       tbody
         each alien in aliens
           tr(style='height=200')
             td(style='height=200')
               a(href='/aliens/' + alien.id)= alien.name
             td(style='height=200')
               img.img-responsive.thumbnail.alien(src=alien.photo)
             td(style='height=200')
               img.img-responsive.thumbnail.alien(src=alien.planet)
             td
               a(href='/aliens/' + alien.id)
                i.fa.fa-trash-o
       .col-xs-6
